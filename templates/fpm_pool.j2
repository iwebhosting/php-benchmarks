[fpm]
user = bench
group = bench
listen = /var/$pool.sock
pm = static
pm.max_children = {{ (ansible_memtotal_mb / 256)|int }}
pm.start_servers = {{ (ansible_memtotal_mb / 256)|int }}
pm.min_spare_servers = {{ (ansible_memtotal_mb / 256)|int }}
pm.max_spare_servers = {{ (ansible_memtotal_mb / 256)|int }}
chdir = /home/bench/public_html
catch_workers_output = yes
